<div class="hero-unit">
  <h2 class="rgNombre"><%= regionProfile.rgNombre %></h2>
  <%- linkTo('Edit this regionProfile', editRegionProfilePath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', regionProfilePath(''), {class: 'btn pull-right'}); %>
</div>

<h2>RegionProfile Properties</h2>
<% for(var i in regionProfile) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= regionProfile[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>