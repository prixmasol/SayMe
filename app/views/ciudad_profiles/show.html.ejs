<div class="hero-unit">
  <h2 class="ctNombre"><%= ciudadProfile.ctNombre %></h2>
  <%- linkTo('Edit this ciudadProfile', editCiudadProfilePath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', ciudadProfilePath(''), {class: 'btn pull-right'}); %>
</div>

<h2>CiudadProfile Properties</h2>
<% for(var i in ciudadProfile) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= ciudadProfile[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>