<div class="hero-unit">
  <h2 class="id"><%= menuProfile.id %></h2>
  <%- linkTo('Edit this menuProfile', editMenuProfilePath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', menuProfilePath(''), {class: 'btn pull-right'}); %>
</div>

<h2>MenuProfile Properties</h2>
<% for(var i in menuProfile) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= menuProfile[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>